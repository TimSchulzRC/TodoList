<%- include("header") -%>

  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>
  <div class="box">
    <% listItems.forEach((i)=> {%>
      <form action="/delete" method="POST">
        <div class="item">
          <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%=i._id %>" />
          <p>
            <%= i.name %>
          </p>
        </div>
        <input type="hidden" name="listName" value="<%=listTitle%> ">
      </form>

      <% }) %>
        <form action="/" method="POST" class="item">
          <input type="text" name="newItem" placeholder="New" autocomplete="off" />
          <button type="submit" name="list" value="<%=listTitle%>">+</button>
        </form>
  </div>

  <%- include("footer") -%>